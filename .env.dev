# Enterprise Code Archaeologist Development Configuration

# Application Ports
WEB_PORT=8000
VECTORDB_PORT=6333
UI_DEV_PORT=3000

# Container Configuration
NODE_ENV=development
COMPOSE_PROJECT_NAME=archaeologist
VECTORDB_HOST=localhost
VECTORDB_TYPE=qdrant
VECTORDB_COLLECTION_PREFIX=archaeologist
LLM_API_URL=http://127.0.0.1:11434/v1
LLM_MODEL=ibm/granite4:1b-h-q4_K_M
LLM_PROVIDER=ollama

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Job Queue Configuration
JOB_QUEUE_NAME=archaeologist_jobs
JOB_RESULT_TTL=86400
JOB_TIMEOUT=3600
JOB_POLL_INTERVAL=5

# RAG Configuration (now integrated into API)
EMBEDDING_TYPE=local
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_MODEL_PATH=./models/bge-small-en-v1.5.gguf
EMBEDDING_DIMENSION=384
MAX_CONTEXT_LENGTH=512
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MIN_CHUNK_SIZE=100
MAX_EMBEDDING_BATCH_SIZE=32

# Database Configuration
DATABASE_URL=sqlite:///archaeologist.db
DATABASE_TYPE=sqlite

# JWT Configuration
JWT_SECRET_KEY=development-secret-key-change-in-production-this-is-not-secure
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=archaeologist-api
JWT_AUDIENCE=archaeologist-ui

# Registry Configuration
VECTORDB_IMAGE=qdrant/qdrant:v1.7.4
CONTAINER_REGISTRY=registry.access.redhat.com
COMPOSE_PROJECT_NAME=archaeologist

# Telemetry Configuration (disabled for development)
OTEL_SDK_DISABLED=true
OTEL_SERVICE_NAME=archaeologist-api
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_RESOURCE_ATTRIBUTES=service.name=archaeologist-api,service.version=1.0.0,deployment.environment=development
