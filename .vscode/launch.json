{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API Service",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "envFile": "${workspaceFolder}/.env.dev",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}/api",
            "python": "${workspaceFolder}/api/.venv/bin/python",
            "presentation": {
                "group": "Archaeologist Services",
                "order": 1
            }
        },
        {
            "name": "Launch Scanner Service",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "envFile": "${workspaceFolder}/.env.dev",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8002"
            ],
            "cwd": "${workspaceFolder}/scanner",
            "python": "${workspaceFolder}/scanner/.venv/bin/python",
            "presentation": {
                "group": "Archaeologist Services",
                "order": 2
            }
        },
        {
            "name": "Debug UI in Browser",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/ui/src",
            "sourceMaps": true,
            "presentation": {
                "group": "Archaeologist Services",
                "order": 3
            }
        }
    ]
}
